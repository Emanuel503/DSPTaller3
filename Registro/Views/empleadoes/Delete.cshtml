@model Registro.Models.empleado

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar empleado</h2>

<h3>Estas seguro que quiere eliminar este empleado?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre completo:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            N° de documento:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.documento)
        </dd>

        <dt>
           Fecha de nacimiento:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fechaNacimiento)
        </dd>

        <dt>
            Correo electronico:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.correo)
        </dd>

        <dt>
            Area de trabajo:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.areaTrabajo)
        </dd>

        <dt>
           Sueldo:
        </dt>

        <dd>
            $@Html.DisplayFor(model => model.sueldo)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
