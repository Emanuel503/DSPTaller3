@model Registro.Models.horario

@{
    ViewBag.Title = "Details";
}

<h2>Detalles de horario</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tipo de horario:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipo)
        </dd>

        <dt>
            Cantidad de horas:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

        <dt>
            Costo de hora normal:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.costoHoraNormal)
        </dd>

        <dt>
            Costo de hora extra:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.costoHoraExtra)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.idHorario }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default" })
</p>
